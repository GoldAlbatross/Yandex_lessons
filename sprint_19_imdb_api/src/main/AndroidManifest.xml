        android:theme="@style/Theme.Yandex_lesson">
        <activity
            android:name=".core.ui.movies.activity.MoviesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.ui.poster.activity.DetailsActivity"
            android:exported="true" />
        <activity
            android:name=".core.ui.cast.MoviesCastActivity"
            android:exported="true"/>
    </application>

</manifest>